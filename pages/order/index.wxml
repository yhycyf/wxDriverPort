            <view class="btn">取消</view>
            <view class="btn blue">立即支付</view>
          </view> -->
          <view class="flexCol moneyBox">
            <!-- <view class="flexRow top">
              <view class="num red">￥</view>
              <view class="text red">299</view>
            </view> -->
            <view class="status red">待支付</view>
          </view>
        </view>
      </view>
    </van-tab>
    <van-tab title="进行中">
      <view class="listBox"></view>
    </van-tab>
    <van-tab title="已完成">
      <view class="listBox"></view>
    </van-tab>
    <van-tab title="已关闭">
      <view class="listBox"></view>
    </van-tab>
  </van-tabs>
</view>

